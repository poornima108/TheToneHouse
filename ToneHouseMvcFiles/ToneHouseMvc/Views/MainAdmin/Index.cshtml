
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}




<div id="fh5co-blog" class="fh5co-bg-section">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading animate-box">
                <h2>Admin Portal</h2>
                <p> Admin will organize events for the users to make their Gym Experience more exciting. </p>
            </div>
        </div>
        <div class="row row-bottom-padded-md">
            <div class="col-lg-4 col-md-4">
                <div class="fh5co-blog animate-box">
                    <a href="#">
                        <img class="img-responsive" src="~/stamina/images/home-events1.jpg" alt="" style="width:100%; height:300px">
                    </a>
                    <div class="blog-text">
                        <h3><a href="#">Exercise</a></h3>
                        <span class="posted_on">Exercise CRUD</span>
                        <p>You can Add, Delete, Edit the Exercise Here.</p>
                        <a href=@Url.Action("DisplayExercise","MainAdmin")><input type="button" id="diet" value="Excercise" style="width:150px;" /></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="fh5co-blog animate-box">
                    <a href="#">
                        <img class="img-responsive" src="~/stamina/images/home-events2.jpg" alt="" style="width:100%; height:300px">
                    </a>
                    <div class="blog-text">
                        <h3><a href="#">Diet</a></h3>
                        <span class="posted_on">Diet CRUD</span>
                        <p>You can Add, Delete, Edit the Diet Here.</p>
                        <a href=@Url.Action("DisplayDiet","MainAdmin")><input type="button" id="diet" value="Diet" style="width:150px" /></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="fh5co-blog animate-box">
                    <a href="#">
                        <img class="img-responsive" src="~/stamina/images/admin_bg.jpg" alt="" style="width:100%; height:300px">
                     
                    </a>
                    <div class="blog-text">
                        <h3><a href="#">User Details</a></h3>
                        <span class="posted_on">User Details CRUD</span>
                        <p>Admin can Search by  name  Here .</p>
                        <a href=@Url.Action("Search","MainAdmin")><input type="button" id="diet" value="Signup" style="width:150px" /></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
